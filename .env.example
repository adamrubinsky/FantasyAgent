# Fantasy Football Draft Assistant - Environment Variables Template
# Copy this file to .env.local and add your actual credentials

# Sleeper API (No auth needed, but storing user info)
SLEEPER_USERNAME=your-sleeper-username
SLEEPER_LEAGUE_ID=your-league-id

# Anthropic Claude API (for AI assistant features - get from anthropic.com)
ANTHROPIC_API_KEY=sk-ant-api03-your-actual-key-here

# FantasyPros Data API (for player stats and rankings)
FANTASYPROS_API_KEY=your-fantasypros-api-key

# Yahoo Fantasy API (for future use)
YAHOO_CLIENT_ID=your-yahoo-client-id
YAHOO_CLIENT_SECRET=your-yahoo-client-secret

# Development settings
DEBUG=true
LOG_LEVEL=INFO
